@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Registrarse</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post" asp-controller="Auth" asp-action="Register">
    <div class="form-group">
        <label>Nombre</label>
        <input name="Nombre" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Apellido</label>
        <input name="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input name="Email" type="email" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" name="Password" class="form-control" required />
    </div>

    <button class="btn btn-success mt-3">Crear cuenta</button>
</form>

<p class="mt-3">
    ¿Ya tienes cuenta? <a href="/Auth/Login">Inicia sesión aquí</a>
</p>